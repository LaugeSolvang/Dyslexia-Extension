@startuml
!theme plain

package "Chrome Extension" {
    [Popup/Options UI] --> [Background Script] : Sends user\nsettings & accesses\neducational content
    [Background Script] --> [Content Script] : Commands to\nalter text
    database "Precomputed Words Database" {
        folder "Word Transformations" as WT
    }
    [Script for Creating Database] ..> WT : Generates\nword variations
    [Content Script] --> WT : Fetches word\ntransformations
    [Popup/Options UI] ..> [Educational Content Repository] : Displays educational\ncontent
    [Content Script] ..> [TTS Module] : Triggers text-to-speech

    database "Educational Content Repository" {
    folder "Dyslexia Information" as DI
}
}

actor User
User --> [Popup/Options UI] : Interacts

@enduml
