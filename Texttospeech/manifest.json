{
    "manifest_version": 2,
  
    "name": "Page to Speech",
    "description": "This extension will produce English speech to whatever text you highlight on a webpage.Highlight text and click the extension's icon",
    "author": "Ivan Dimov",
    "version": "1.0",
    "background": {
        "scripts": ["background.min.js"]
      },
    "content_scripts": [
        {
         "matches": ["http://*/*", "https://*/*"],
          "js": ["ext.min.js"],
          "run_at": "document_end"
        }
    ],
    "browser_action": {
    },
    "permissions": [
       "activeTab",
       "clipboardRead"
    ]
}
        
    
